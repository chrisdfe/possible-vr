#!/usr/bin/env node

const webpack = require('webpack')
const config = require('../webpack.config.js');

const compiler = webpack({
  ...config,
  mode: 'development',
});

const watching = compiler.watch({
  // Example watchOptions
  aggregateTimeout: 300,
  // poll: undefined,
}, (err, stats) => {
  // Print watch/build result here...
  console.log(stats);
});
